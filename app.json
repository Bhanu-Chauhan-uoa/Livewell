{
  "expo": {
    "name": "LiveWell",
    "slug": "livewell-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/favicon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f8f9fa"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "LiveWell uses Face ID for secure and convenient sign-in to protect your health information.",
        "NSCameraUsageDescription": "LiveWell uses the camera for Face ID authentication only."
      },
      "bundleIdentifier": "com.livewell.seniorhealth"
    },
    "android": {
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f8f9fa"
      },
      "package": "com.livewell.seniorhealth"
    },
    "web": {
      "favicon": "./assets/Logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}